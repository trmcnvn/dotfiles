# Theme
background-opacity = 0.95
background-blur-radius = 20
unfocused-split-opacity = 0.75
theme = rose-pine

# Keybinds
keybind = cmd+enter=new_split:right
keybind = cmd+ctrl+enter=new_split:down
keybind = super+w=unbind
