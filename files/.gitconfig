[user]
	name = Thomas McNiven
	email = hello@trmcnvn.dev
	signingkey = D8087F83
[github]
  user = trmcnvn
[color]
	ui = true
	diff = true
	status = true
	branch = true
	interactive = true
[merge]
  ff = false
[pull]
  rebase = merges
	default = current
[push]
	default = current
[core]
  autocrlf = input
  quotepath = false
	excludesfile = ~/.gitexcludes
	editor = code --wait
	whitespace = fix
	trustctime = false
[branch]
  quotepath       = true
  autosetuprebase = always
[alias]
	co = checkout
	cm = commit
	br = branch
	pr = "!f() { git fetch ${1-master} pull/${2}/head:pr-${2}; }; f"
	wip = !git add -A && git commit -m 'wip'
	undo = !git reset HEAD~1 --mixed
	amend = !git commit --amend --no-edit
	dbr = !git branch --merged | grep -v \"\\* \" | xargs git branch --delete
[remote "origin"]
  fetch = +refs/pull/*/head:refs/remotes/origin/pull/*
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[commit]
	gpgsign = true
[gpg]
	program = gpg
[init]
	defaultBranch = main
[diff]
	compactionHeuristic = true
