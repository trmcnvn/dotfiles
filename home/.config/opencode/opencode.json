{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "theme": "rosepine",
  "enabled_providers": [
    "opencode",
    "openai"
  ],
  "permission": {
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.envrc": "deny",
      "secrets/*": "deny"
    }
  },
  "keybinds": {
    "leader": "ctrl+o",
    "variant_cycle": "<leader>t",
  },
  "mcp": {
    "pg-aiguide": {
      "type": "remote",
      "url": "https://mcp.tigerdata.com/docs",
      "enabled": false
    },
    "svelte": {
      "type": "remote",
      "url": "https://mcp.svelte.dev/mcp",
      "enabled": false
    },
    "whop": {
      "type": "remote",
      "url": "https://docs.whop.com/mcp",
      "enabled": false
    },
    "cloudflare-docs": {
      "type": "remote",
      "url": "https://docs.mcp.cloudflare.com/mcp",
      "enabled": false
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "bunx",
        "chrome-devtools@latest"
      ],
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "figma": {
      "type": "remote",
      "url": "https://mcp.figma.com/mcp",
      "enabled": false
    }
  }
}
